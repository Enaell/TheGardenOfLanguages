{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  // "extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json",
  "display": "Recommended",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "esm": true, // «———— enabling ESM for ts-node   
  }
}